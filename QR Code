  <main class="max-w-2xl mx-auto mt-10 p-6 bg-white rounded shadow">
    <h2 class="text-xl font-semibold mb-4">Generate Your QR Code</h2>
    <input type="text" id="qrInput" placeholder="Enter URL or text" class="w-full p-3 border rounded mb-4" />

    <div class="flex flex-wrap justify-center gap-4 mb-4">
      <select id="qrSize" class="p-2 border rounded">
        <option value="150">150x150</option>
        <option value="200" selected>200x200</option>
        <option value="250">250x250</option>
        <option value="300">300x300</option>
      </select>
      <select id="qrError" class="p-2 border rounded">
        <option value="L">Error Level: L</option>
        <option value="M">Error Level: M</option>
        <option value="Q">Error Level: Q</option>
        <option value="H">Error Level: H</option>
      </select>
    </div>

    <button onclick="generateQR()" class="px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Generate QR</button>

    <div id="qrPreview" class="mt-6"></div>
